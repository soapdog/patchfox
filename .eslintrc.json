{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "webextensions": true
    },
    "globals": {
        "hermiebox": true,
        "m": true,
        "hljs": true,
        "ssb": true,
        "patchfox": true,
        "process": true,
        "history": true,
        "location": true,
        "setServerType": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": ["svelte3"],
    "overrides": [
        {
            "files": ["*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "a11y-label-has-associated-control": "off",
        "no-console": "off",
        "no-unused-vars": "off",
        "no-prototype-builtins": "off",
        "semi": ["error", "never"]
    }
}
