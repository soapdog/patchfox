{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "webextensions": true
    },
    "globals": {
        "hermiebox": true,
        "m": true,
        "hljs": true,
        "ssb": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
      
        "no-console": "off",
        "no-unused-vars": "off",
        "semi": "off"
    }
}
